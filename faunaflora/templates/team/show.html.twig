{% extends 'base.html.twig' %}

{% block title %} {{ team.firstname }} {% endblock %}

{% block body %}
<main>
    <div class="breadcumb-area">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('team') }}">Equipe</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{team.firstname}}</li>
            </ol>
        </nav>
    </div>
    <div class="clever-catagory bg-img d-flex align-items-center justify-content-center p-3" style="background-image: url(../img/bg-img/bg3.jpg);">
        <h3>Equipe</h3>
    </div>
    <div>
        <div class="container">
            <h1 class="text-center mt-5">{{team.lastname}} <span>{{team.firstname}}</span></h1>
            <p class="text-center pb-3">{{team.title}}</p>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="justify-content-center mb-5">
                <div>
                    <img src="{{ asset('images/fauna/' ~ team.fileName) }}" style="height:350px;width:500px;display:block;">
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}




    

