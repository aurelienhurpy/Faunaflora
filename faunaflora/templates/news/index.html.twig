{% extends 'base.html.twig' %}

{% block title %}Réalisations{% endblock %}

{% block body %}

<main>
    <div class="breadcumb-area">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Dernières réalisations</li>
            </ol>
        </nav>
    </div>
    <div class="clever-catagory bg-img d-flex align-items-center justify-content-center p-3" style="background-image: url(img/bg-img/bg4.jpg);">
        <h3>Dernières réalisations</h3>
    </div>
    <section class="popular-courses-area section-padding-100">
        <div class="container">
            <div class="row">
                {% for news in pagination.data %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="single-popular-course mb-100 wow fadeInUp" data-wow-delay="500ms">
                            {% include 'news/_news.html.twig' %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
</main>
{% endblock %}
