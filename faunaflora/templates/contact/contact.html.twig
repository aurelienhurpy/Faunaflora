{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <main>
        <div class="breadcumb-area">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Contact</li>
                </ol>
            </nav>
        </div>
        <div class="clever-catagory bg-img d-flex align-items-center justify-content-center p-3" style="background-image: url(img/bg-img/bg6.jpg);">
            <h3>Contact</h3>
        </div>
        <div class="container mt-5">
            <div class="forms">                
                {% for adresses in adresses %}
                    <div class="row text-center justify-content-center">
                        <div class="mb-5 mt-3 mr-2">
                            <p>{{ adresses.nom }}</p>
                            <p>{{ adresses.rue }}</p>
                            <p>{{ adresses.ville }}</p>
                            <p><i class="fas fa-phone"></i>&nbsp;&nbsp;&nbsp;<i class="fas fa-fax"></i>&nbsp;&nbsp;&nbsp;{{ adresses.tel }}</p>
                            <p><i class="fas fa-at"></i>&nbsp;&nbsp;&nbsp;{{ adresses.mail }}</p>
                        </div>
                    </div>
                {% endfor %}                  
            </div>
            <h1 class="text-center mt-2">Demande de contact</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
                <div class="p-5 text-center">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="{{ path('homepage') }}" class="btn btn-warning"><i class="fas fa-times"></i> Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}