{% extends 'admin/base.html.twig' %}

{% block title %}Détail demande de contact{% endblock %}

{% block body %}
    <main class="dashb">
        <div class="breadcumb-area">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_contact_list') }}">Gestion des contacts</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Détail demande de contact {{ contact.firstname }} {{ contact.lastname }}</li>
                </ol>
            </nav>
        </div>
        <div class="adminban">
            <h1 class="text-center text-white">Détail demande de contact {{ contact.firstname }} {{ contact.lastname }}</h1>
        </div>
        <div class="container mt-5">
            <div class="col-md-6 offset-md-3">
                <dl class="row">
                    <dt class="col-md-5">Nom :</dt>
                    <dd class="col-md-7">{{ contact.lastname }}</dd>
                    <dt class="col-md-5">Prénom :</dt>
                    <dd class="col-md-7">{{ contact.firstname }}</dd>
                    <dt class="col-md-5">Email :</dt>
                    <dd class="col-md-7">{{  contact.email }}</dd>
                    <dt class="col-md-5">Téléphone :</dt>
                    <dd class="col-md-7">{{ contact.tel }}</dd>
                    <dt class="col-md-5">Nature du contact:</dt>
                    <dd class="col-md-7">{{ contact.natureducontact }}</dd>
                    <dt class="col-md-5">Message :</dt>
                    <dd class="col-md-6">{{ contact.message }}</dd>
                </dl>
            </div>
        <div class="text-center mt-5 mb-5">
            <a href="{{ path('admin_contact_list') }}" class="btn btn-dark"><i class="fas fa-times"></i> Retour</a>
        </div>
    </main>
{% endblock %}