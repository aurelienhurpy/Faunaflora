{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des contacts{% endblock %}

{% block body %}
    <main class="dashb">
        <div class="breadcumb-area">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Gestion des contacts</li>
                </ol>
            </nav>
        </div>
        <div class="adminban">
            <h1 class="text-center text-white">Gestion des contacts</h1>
        </div>
        <table class="table table-hover">
            <thead class="table-secondary">
                <th class="text-center">Nom</th>
                <th class="text-center">Prénom</th>
                <th class="text-center">Email</th>
                <th class="text-center">Téléphone</th>
                <th class="text-center">Nature du contact</th>
                <th class="text-center">Action</th>
            </thead>
            <tbody>
                {% for contact in pagination.data %}
                {% if contact.isRead == true %}
                    <tr>
                        <td class="text-center font-weight-lighter lu">{{ contact.lastname }}</td>
                        <td class="text-center font-weight-lighter lu">{{ contact.firstname }}</td>
                        <td class="text-center font-weight-lighter lu">{{ contact.email }}</td>
                        <td class="text-center font-weight-lighter lu">{{ contact.tel }}</td>
                        <td class="text-center font-weight-lighter lu">{{ contact.natureducontact }}</td>
                        <td class="text-center font-weight-lighter lu">
                            <a href="{{ path('admin_contact_single',{'id':contact.id}) }}" class="btn btn-edit btn btn-sm">Détails</a> 
                            <a href="{{ path('admin_contact_delete',{'id':contact.id}) }}" data-confirm="Attention ! Etes-vous sûr de vouloir supprimer ?" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a> 
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td class="text-center font-weight-bold">{{ contact.lastname }}</td>
                        <td class="text-center font-weight-bold">{{ contact.firstname }}</td>
                        <td class="text-center font-weight-bold">{{ contact.email }}</td>
                        <td class="text-center font-weight-bold">{{ contact.tel }}</td>
                        <td class="text-center font-weight-bold">{{ contact.natureducontact }}</td>
                        <td class="text-center font-weight-bold">
                            <a href="{{ path('admin_contact_single',{'id':contact.id}) }}" class="btn btn-edit btn btn-sm">Détails</a> 
                            <a href="{{ path('admin_contact_delete',{'id':contact.id}) }}" data-confirm="Attention ! Etes-vous sûr de vouloir supprimer ?" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a> 
                        </td>
                    </tr>

                {% endif %}
                {% endfor %}
            </tbody>
        </table>
        {% if pagination.data|length > 5 %}
    {{ pagination.display() }} 
     {% endif %}
    </main>
{% endblock %}
